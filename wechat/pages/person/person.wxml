<!--pages/person/person.wxml-->
<view class="kind-container">
    <view class="top-info">
        <image src="/imgs/avatar.png"></image>
        <view>{{userName}}</view>
    </view>
    <view class="kind-list">
        <view class="kind-list-item" bindtap="edit">
            <image class="kind-list-icon" src="/images/edit .png"></image>
            <view class="kind-list-text">编辑资料</view>
            <image class="navigator-arrow" src="/images/right-arrow.png"></image>
        </view>
        <view class="kind-list-item" bindtap="clickMyLike">
            <image class="kind-list-icon" src="/images/like.png"></image>
            <view class="kind-list-text">我的点赞</view>
            <image class="navigator-arrow" src="/images/right-arrow.png"></image>
        </view>
        <view class="kind-list-item" bindtap="clickMyCollect">
            <image class="kind-list-icon" src="/images/collect.png"></image>
            <view class="kind-list-text">我的收藏</view>
            <image class="navigator-arrow" src="/images/right-arrow.png"></image>

        </view>

        <view class="kind-list-item" bindtap="clickMyfootprint" >
            <image class="kind-list-icon" src="/images/check mark, tick, se.png"></image>
            <view class="kind-list-text">打卡记录</view>
            <image class="navigator-arrow" src="/images/right-arrow.png"></image>
        </view>
        <!--block wx:if{{登录成功}}-->
        <view class="kind-list-item">
            <image class="kind-list-icon" src="/images/link.png"></image>
            <view class="kind-list-text">解绑微信</view>
            <image class="navigator-arrow" src="/images/right-arrow.png"></image>
        </view>
        <button class="exit" type="warn" size="{{warnSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="clickExit"> 退出登录 </button>
    </view>
</view>